{
  "compilerOptions": {
    "moduleResolution": "Node",
    "importsNotUsedAsValues": "error",
    "exactOptionalPropertyTypes": true,
    "target": "ESNext",
    "declaration": true,
    "module": "ESNext",
    "outDir": "./lib/esm",
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
